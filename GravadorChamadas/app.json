{
  "expo": {
    "name": "Gravador de Chamadas",
    "slug": "call-recorder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.isptec.callrecorder",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Esta aplicação necessita de acesso ao microfone para gravar chamadas telefónicas. As gravações são guardadas localmente no seu dispositivo.",
        "NSPhotoLibraryUsageDescription": "Esta aplicação necessita de acesso à biblioteca de fotos para guardar ficheiros de áudio.",
        "NSContactsUsageDescription": "Esta aplicação necessita de acesso aos contactos para identificar números de telefone durante as gravações.",
        "UIBackgroundModes": [
          "audio",
          "fetch"
        ]
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "RECORD_AUDIO",
        "READ_PHONE_STATE",
        "READ_CALL_LOG",
        "PROCESS_OUTGOING_CALLS",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "SYSTEM_ALERT_WINDOW",
        "ACCESS_NETWORK_STATE",
        "INTERNET"
      ],
      "package": "com.isptec.callrecorder"
    },

    "web": {
      "favicon": "./assets/images/favicon.png",
      "name": "Gravador de Chamadas",
      "shortName": "CallRecorder",
      "lang": "pt",
      "scope": "/",
      "themeColor": "#E53E3E",
      "backgroundColor": "#FFFFFF",
      "display": "standalone",
      "orientation": "portrait",
      
      "meta": {
        "viewport": "width=device-width, initial-scale=1.0, viewport-fit=cover",
        "description": "Aplicação web para gravação de chamadas telefónicas - ISPTEC",
        "keywords": "gravação, chamadas, áudio, react native, expo",
        "author": "ISPTEC",
        "charset": "utf-8",
        "theme-color": "#E53E3E",
        "apple-mobile-web-app-capable": "yes",
        "apple-mobile-web-app-status-bar-style": "black-translucent"
      },

      "startUrl": "/",
      "preferRelatedApplications": false,
      
      "icons": [
        {
          "src": "./assets/images/icon-16x16.png",
          "sizes": "16x16",
          "type": "image/png"
        },
        {
          "src": "./assets/images/icon-32x32.png",
          "sizes": "32x32",
          "type": "image/png"
        },
        {
          "src": "./assets/images/icon-48x48.png",
          "sizes": "48x48",
          "type": "image/png"
        },
        {
          "src": "./assets/images/icon-128x128.png",
          "sizes": "128x128",
          "type": "image/png"
        },
        {
          "src": "./assets/images/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        },
        {
          "src": "./assets/images/icon-512x512.png",
          "sizes": "512x512",
          "type": "image/png"
        }
      ],

      "splash": {
        "image": "./assets/images/splash-web.png",
        "resizeMode": "contain",
        "backgroundColor": "#E53E3E",
        "imageWidth": 600,
        "imageHeight": 600
      }
    },

    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#E53E3E",
          "iosDisplayInForeground": true
        }
      ],
      [
        "expo-background-fetch",
        {
          "minimumInterval": 60,
          "stopOnTerminate": false,
          "startOnBoot": true
        }
      ]
    ],

    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },

    "runtimeVersion": {
      "policy": "sdkVersion"
    },

    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/your-project-id"
    }
  }
}